<div id="custom-index" class="p-2">
  <%= render "/header" %>
  <%= render "/notice" %>
  <base-card>
    <div class="overflow-auto md:overflow-visible flex-auto min-h-[40vh] max-h-[66vh] md:min-h-0 md:max-h-none md:w-full rounded">
      <table class="text-center text-lg min-w-[1000px] md:min-w-[200px] border-b border-solid border-b-gray-200 whitespace-nowrap align-middle w-full">
        <thead class="sticky top-0 md:hidden">
          <tr class="text-black bg-slate-200 text-xl border-x border-gray-200">
            <th class="p-4 w-[100px]">Action</th>
            <th class="p-4">Correct Word</th>
            <th class="p-4">Incorrect Word</th>
          </tr>
        </thead>
        <tbody class="md:flex md:flex-col">
          <% @customs.each do |custom| %>
            <tr class="md:grid md:grid-cols-3 border-x border-gray-200 hover:bg-gray-200">
              <td class="px-4 py-2 md:col-span-3 md:text-left">
                    <%= link_to edit_custom_path(custom[:id]), 
          class: "btn text-lg" do %>
                      <edit-outlined>
                    <% end %>
              </td>
              <td data-title="Correct Word" class="px-4 py-2 md:col-span-3 md:text-left">
                <%= custom[:correct_word] %>
              </td>
              <td data-title="Incorrect Word" class="px-4 py-2 md:col-span-3 md:text-left">
                <%= custom[:incorrect_word] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </base-card>
</div>
